<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Document</title>
</head>

<body>
  <h1>RC Shoutouts</h1>
  <form class="new">
    <div>
      <label for="name">Name:</label>
      <input id="name" type="text" name="name" placeholder="Enter name">
    </div>
    <div>
      <label for="image">image:</label>
      <input id="image" type="file" name="file-to-upload" placeholder="">
    </div>
    <input onClick="window.location.reload();" type="submit" class="submitNew" value="Add Shoutout">
  </form>
  <!-- <button id="clearCompleted">CLEAR COMPLETED</button>
    <button id="clear">CLEAR</button> -->

  <ul id="list">
    <% for(i=0; i < shoutouts.length; i++) { %>
      <li class="person">
        <div>
          <div>
            <section class="info">
              <h3 class="name">
                <%= shoutouts[i].name %>
              </h3>
            </section>
            <img class="image" src="<%= shoutouts[i].image %>">
            <button class="delete">DELETE</button>
            <button class="edit">Edit</button>
          </div>
        </div>
        <form class="editForm hide">
          <div>
            <label for="name">Name:</label>
            <input class="name" type="text" name="newName" placeholder="Enter name">
          </div>
          <div>
            <label for="image">headshot:</label>
            <input class="image" type="file" name="file-to-upload">
          </div>
          <input type="submit" class="submit submitEdit" value="Submit">
          <!-- <button type="button" class="cancelEdit">Cancel</button> -->
        </form>
      </li>
      <% } %>
  </ul>

  <script type="text/javascript" src="main.js"></script>
</body>

</html>